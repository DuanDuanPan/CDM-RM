{
  "name": "cdm-architecture",
  "private": true,
  "packageManager": "yarn@3.6.1+sha512.de524adec81a6c3d7a26d936d439d2832e351cdfc5728f9d91f3fc85dd20b04391c038e9b4ecab11cae2b0dd9f0d55fd355af766bc5c1a7f8d25d96bb2a0b2ca",
  "engines": {
    "node": ">=20 <21"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@prisma/client": "^5.17.0",
    "dotenv-safe": "file:vendor/dotenv-safe"
  },
  "scripts": {
    "setup": "corepack enable && yarn --version",
    "lint": "eslint '{apps,packages,scripts}/**/*.{js,jsx,ts,tsx,cts,mts,cjs,mjs}' --max-warnings=0",
    "lint:fix": "eslint '{apps,packages,scripts}/**/*.{js,jsx,ts,tsx,cts,mts,cjs,mjs}' --max-warnings=0 --fix",
    "prettier:check": "prettier --check \"{apps,packages,scripts}/**/*.{js,jsx,ts,tsx,cts,mts,cjs,mjs,json,md,yml,yaml}\" \".github/**/*.{md,yml,yaml}\" \"*.{json,md,cjs,mjs}\"",
    "format": "prettier --write \"{apps,packages,scripts}/**/*.{js,jsx,ts,tsx,cts,mts,cjs,mjs,json,md,yml,yaml}\" \".github/**/*.{md,yml,yaml}\" \"*.{json,md,cjs,mjs}\"",
    "type-check": "tsc --noEmit",
    "api:openapi": "node scripts/export-openapi.js",
    "api:spectral": "spectral lint docs/openapi.json",
    "api:diff": "openapi diff docs/openapi.baseline.json docs/openapi.json || true",
    "api:types": "openapi-typescript docs/openapi.json -o packages/api-types/src/index.ts",
    "api:client": "openapi-typescript-codegen --input docs/openapi.json --output packages/api-client --client axios --useOptions",
    "prepare": "husky install",
    "test:client": "yarn workspace @cdm/web test",
    "test:client:watch": "yarn workspace @cdm/web test:watch",
    "test:server": "yarn workspace @cdm/api test",
    "test:server:watch": "yarn workspace @cdm/api test:watch",
    "test:web": "yarn test:client",
    "test:api": "yarn test:server",
    "test": "yarn test:client && yarn test:server",
    "coverage": "node scripts/coverage-summary.cjs",
    "prisma:generate": "node scripts/validate-env.cjs && yarn workspace @cdm/api prisma generate",
    "prisma:migrate": "node scripts/validate-env.cjs && yarn workspace @cdm/api prisma migrate dev",
    "prisma:rollback": "node scripts/validate-env.cjs && yarn workspace @cdm/api prisma migrate diff --from-migrations=prisma/migrations --to-empty --script --shadow-database-url=$SHADOW_DATABASE_URL",
    "pretest:migrate": "yarn prisma:generate",
    "test:migrate": "node scripts/validate-env.cjs && yarn workspace @cdm/api test:migrate"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.4.0",
    "@redocly/openapi-cli": "^1.0.0-beta.95",
    "@stoplight/spectral-cli": "6.12.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "openapi-typescript": "^7.0.0",
    "openapi-typescript-codegen": "^0.27.0",
    "prettier": "^3.3.3",
    "prisma": "^5.17.0",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cts,mts,cjs,mjs}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "{apps,packages,scripts}/**/*.{js,jsx,ts,tsx,cts,mts,cjs,mjs}": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ],
    "*.{json,md,cjs,mjs}": "prettier --write",
    "{apps,packages,scripts}/**/*.{json,md,yml,yaml}": "prettier --write",
    ".github/**/*.{md,yml,yaml}": "prettier --write"
  },
  "resolutions": {
    "@stoplight/spectral-cli": "6.12.0",
    "@stoplight/spectral-core": "1.18.3",
    "@stoplight/spectral-parsers": "1.0.3",
    "@stoplight/spectral-runtime": "1.1.2",
    "@stoplight/spectral-ruleset-bundler": "1.5.2",
    "@stoplight/spectral-formatters": "1.3.0",
    "@stoplight/spectral-ref-resolver": "1.0.4",
    "@stoplight/spectral-ruleset-migrator": "1.9.5",
    "@stoplight/spectral-rulesets": "1.18.1",
    "@stoplight/spectral-functions": "1.8.0",
    "@stoplight/spectral-formats": "1.7.0"
  }
}
